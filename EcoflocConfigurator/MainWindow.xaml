<Window x:Class="EcoflocConfigurator.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EcoflocConfigurator"
        mc:Ignorable="d"
        Title="MainWindow"
        SizeToContent="Height"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Width="300">
    <DockPanel>
        <ToolBar DockPanel.Dock="Top"
                 ToolBarTray.IsLocked="True">
            <Button Name="CPUButton"
                    Content="CPU"
                    Click="CPUButton_Click" />
            <Button Name="SDButton"
                    Content="SD"
                    Click="SDButton_Click" />
            <Button Name="NICButton"
                    Content="NIC"
                    Click="NICButton_Click" />
        </ToolBar>
        <ContentControl x:Name="MainContentControl" />
    </DockPanel>
</Window>
